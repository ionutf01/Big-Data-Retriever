@page "/Models"
@model Birt.App.Pages.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Our Models</title>
    <script src="https://cdn.jsdelivr.net/npm/rdflib@2.2.0/dist/rdflib.min.js"></script>
    <script type="module" src="js/site.js"></script>
</head>
<body>
<div>
    <h1>Our Models</h1>
